{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des livres</h1>
    <div class="row">
        {% for livre in livres %}
            <div class="col-sm-4 mb-3 mt-3">
                <div class="card" style="--i: {{ loop.index }}; --n: {{ livres|length }};">
                    <div class="card-body">
                        <h5 class="card-title">{{ livre.titre }}</h5>
                        <p class="card-text">{{ livre.auteur.nom }}</p>
                        <a href="{{ path('livre_details', {'id': livre.id}) }}" class="btn btn-primary">Voir d√©tails</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}